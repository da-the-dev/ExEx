{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/naming-convention": "warn",
        "eqeqeq": "error",
        "no-throw-literal": "warn",
        "semi": [
            "error",
            "never"
        ],
        "@typescript-eslint/semi": [
            "error",
            "never"
        ],
        "curly": [
            "error",
            "multi"
        ]
    },
    "ignorePatterns": [
        "out",
        "dist",
        "**/*.d.ts"
    ]
}